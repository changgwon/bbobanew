
<style>
.point_box{
	background-color:rgb(5,112,117, 0.2);
	height:200px;
	border-radius:10px;
	width:100%;
	margin: 0 auto;
	text-align: center;
	padding-top:50px;
	margin-bottom:50px;

}

table, td, th {    
    text-align: left;
}

table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 15px;
}
tr{
	border-bottom:1px solid black;
}

h5{
	margin-bottom: 10px;
}

</style>


<div class="column detailview center">

	<h5>포인트 내역</h5>
	<div class="point_box">
		<h4>현재 포인트 : <%= current_user.cur_cash %><br></h4><br>
		<a href="/payment/new"><button id="print_status">포인트 충전</button></a><br>
		<br>
	</div>

	<div>
		<h5 style="text-align:left">포인트 충전/사용내역</h5>
		<div>
		<table>
		<% @cashflows.each do |x| %>
			<tr>
			<% if x.use_type == '차감' %>
		    	<td><%= x.real_created_at %></td> <td>[<%=x.use_type%>]</td> <td>-<%=x.amount%></td> <td><%=x.cur_cash%></td>
		    	
		    <%else%>
		    	<td><%= x.real_created_at %></td> <td>[<%=x.use_type%>]</td> <td><%=x.amount%></td> <td><%=x.cur_cash%></td>
		    <%end%>
		   
		   	</tr>
		    
		    <br>
		<% end %>
		</table>
	</div>
</div>
