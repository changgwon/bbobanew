<style>

.pheader{
  display:none;
}

.page{
  margin-top: 10%;
}

.login-signup{
  text-align: center;
}
 @media (max-width:767px){
    .logo{
      display:none;
    }
    .go-back{
      display:block;
    }
    .navbar-toggler{
      display:none;
    }
    .nav-title{
      display:block;
    }

    .nav-title:after {
      visibility: visible;
      position: absolute;
      width: 100%;
      left: 0;
      text-align: center;
      margin: auto;
      content: "비밀번호 변경하기";
    }
    .text-center{
      visibility:hidden;
    }

    article[role="signup"]{
      box-shadow:none;
      -webkit-box-shadow:none;

    }

  }
</style>

<div class="page">
  <div class="login-signup">
  <article role="signup">
    <h5 class="text-center"><i class="fa fa-lock"></i>비밀번호 변경하기</h5>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<!--   <%= f.error_notification %>
 -->  <%= devise_error_messages! %>
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: false,
                required: true,
                autofocus: true,
                placeholder: "새로운 비밀번호",
                hint: ("#{@minimum_password_length} 글자 이상" if @minimum_password_length),
                input_html: { autocomplete: "새로운 비밀번호", class:"form-control" } %><br>
    <%= f.input :password_confirmation, 
                label: false,
                required: true,
                autofocus: true,
                placeholder: "비밀번호 확인",
                input_html: { autocomplete: "비밀번호 확인", class:"form-control"} %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "비밀번호 변경", class: "btn button form-group btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</article>
</div>
</div>