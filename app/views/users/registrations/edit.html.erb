<style>

.pheader{
  display:none;
}

.page{
  margin-top: 10%;
}
 @media (max-width:767px){
    .logo{
      display:none;
    }
    .go-back{
      display:block;
    }
    .navbar-toggler{
      display:none;
    }
    .nav-title{
      display:block;
    }

    .nav-title:after {
      visibility: visible;
      position: absolute;
      width: 100%;
      left: 0;
      text-align: center;
      margin: auto;
      content: "비밀번호 수정";
    }
    .text-center{
      visibility:hidden;
    }

    article[role="signup"]{
      box-shadow:none;
      -webkit-box-shadow:none;

    }

  }

</style>
<div class="page">
<div class="login-signup">
  <article role="signup">
    <h5 class="text-center"><i class="fa fa-lock"></i>비밀번호 수정</h5>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :current_password,
                label:false,
                hint: "",
                required: true,
                placeholder:'현재 비밀번호',
                input_html: { autocomplete: "현재 비밀번호", class:"form-control"} %><br>
    <%= f.input :password,
                hint: "",
                label:false,
                required: false,
                placeholder:'변경 후 비밀번호 ',
                input_html: { autocomplete: "변경 후 비밀번호", class:"form-control" } %><br>
    <%= f.input :password_confirmation,
                label:false,
                required: false,
                placeholder:'변경 후 비밀번호 확인',
                input_html: { autocomplete: "변경 후 비밀번호 확인", class:"form-control" } %><br>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn button form-group btn-block" %>
  </div>

<% end %>


<!-- <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
 -->

    <div class="signup"></div>
  </article>
</div>
</div>