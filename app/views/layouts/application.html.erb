  <style>

    a{
      color:black;
    }
    header{   
      width:100%;
    }
    .navbar{
      display: flex;
      height: 70px;
      background-color:rgba(255, 255, 255, 0.6);
    }
    .hidden{
      display:block;
    }
    .dropdown{
      display:none;
    }
    .go-back{
      display:none;
    }
    .nav-link{
      text-align:right;
    }
    .nav-title{
      display:none;
    }
    .mx-auto p{
      padding: 0px 10px;
    }

  @media (min-width:992px){
    .hidden{
      display:none;
    }
    .dropdown{
      display:block;
    }

  }

  @media (max-width:767px){
    .navbar{
      padding:1rem 1.5rem; 
    }
  }
  @media (min-width: 576px){
    .col-sm-4 {
      max-width: 100%;
    }
}

}
