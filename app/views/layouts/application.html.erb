  <header>
    <nav class="navbar navbar-expand-lg navbar-light" id="mainnav">
      <div class="navbar-brand">
        <a href="/home/index"><img class="logo" src="/logo(horizon).png"></a>
        <img class="go-back" src="/left-arrow.png" onclick="window.history.back()">
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <p class="nav-title"></p>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        </ul>
        <div class="hamburger">
        <form class="form-inline my-2 my-lg-0">
          <% if user_signed_in? %>
            <%= link_to "정보변경", edit_user_registration_path, {:style=>"margin-right:30px"} %>    
            <%= link_to "로그아웃", destroy_user_session_path %>
            <%= link_to "포인트 충전", "/payment/cashflow" %>
            <%= link_to "메인페이지", "/home/main" %>
            <%= link_to "신청내역", "/home/filecurrent" %>
          <% end %>
        </form>
       </div>
      </div>
    </nav>
  </header>
  <%= yield %>  

