<script type="text/javascript">

	var todaylist = document.getElementById('todaylist');
	var tomorrowlist = document.getElementById('tomorrowlist');
	todaylist.style.display = 'block';
	tomorrowlist.style.display = 'none';

    // Get the modal
    var modal = document.getElementById('mymodal');

    // Get the button that opens the modal
    var detailBtn = document.getElementById("detailBtn");
    var downloadBtn = document.getElementById("downloadBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
        modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    function changeDate(){

    	var x = document.getElementById("timeSelect").value;

    	if (x == 'today'){
	    	todaylist.style.display = 'block';
			tomorrowlist.style.display = 'none';
    	}
    	else if (x == 'tomorrow'){
    		todaylist.style.display = 'none';
			tomorrowlist.style.display = 'block';
    	}
    	else if (x == 'total'){
    		todaylist.style.display = 'block';
			tomorrowlist.style.display = 'block';
    	}

    }

	document.getElementById('notdone').onclick = function () {
		alert('notdone');
	}

	document.getElementById('done').onclick = function () {
		alert('done');
	}

	document.getElementById('all').onclick = function() {
		alert('all');

	}

