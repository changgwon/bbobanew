<div class="datetime">
  <div class="date">
    <p id="yy"></p>
    <p id="mm"></p>
    <p id="dd"></p>
    <p id="day"></p>
  </div>

  <div class="time">
    <p>현재시각</p>
    <p id="time"></p>
  </div>

	<select id="timeSelect" onchange="changeDate()">
	    <option value="today" selected="selected">오늘 목록 보기</option>
	    <option value="tomorrow">내일 목록 보기</option>
	    <option value="total">전체 목록 보기</option>
	</select>

  <script>
    var d = new Date();
    document.getElementById("yy").innerHTML = d.getFullYear()+"년";
    document.getElementById("mm").innerHTML = (d.getMonth()+1)+"월";
    document.getElementById("dd").innerHTML = d.getDate()+"일";

    var weekdays=["일요일", "월요일", "화요일", "수요일", "목요일", "금요일", "토요일"];
    document.getElementById("day").innerHTML = weekdays[d.getDay()];

    var hr = d.getHours();
    var min = d.getMinutes();
    function hrfunc(hr){
      if(hr<12) return "(오전)"+hr+":"
      else if (hr==12) return "(오후)"+hr+":"
      else return "(오후)"+(hr-12)+":"
    }
    document.getElementById("time").innerHTML = hrfunc(hr)+min;

  </script>
</div>

<div style="text-align:center; margin-top: 40px">
	<input type="button" value="미완료 " id="notdone">|
	<input type="button" value=" 완료 " id="done">|
	<input type="button" value=" 전체" id="all"> <br>
</div>

<div id="tableID" style="margin-top: 40px;">
  <table class="table-list" data-currentpage="1">
    <thead>
	  <th><button type="button" class="sort textcenter" data-sort="pickupNum">순번<i class="caret"></i></button></th>
      <th><button type="button" class="sort textcenter" data-sort="pickupTime">픽업시간<i class="caret"></i></button></th>
      <th><button type="button" class="sort textcenter" data-sort="pickupName">이름<i class="caret"></i></button></th>
      <th><button type="button" class="sort textcenter" data-sort="printPage">범위(매수)<i class="caret"></i></button></th>
      <th><button type="button" class="sort textcenter" data-sort="checkDetail">신청내용<i class="caret"></i></button></th>      
      <th><button type="button" class="sort textcenter" data-sort="printState">상태<i class="caret"></i></button></th>
    </thead>
    <!-- IMPORTANT, class="list" must be on tbody -->
    <tbody id="todaylist">
      <% if @todayuploads.empty? %>
        <tr>
          <td>신청 내역이 없습니다.<br></td>
        </tr>
      <% else %>
        <% @todayuploads.each do |x| %>
          <tr>
          	<td class="minify pickupNum"><%=x.id%></td>
            <td class="minify pickupTime"><%= x.pkuptime.split('~')[0] %></td>
            <td class="pickupName"><%= User.find_by(userid: x.userid).username %></td>
            <td class="printPage"><%= x.pagenum %>(총 <%= x.totalpage %> 장)</td>
            <td class="checkDetail"><button id="detailBtn" onclick="showDetails('<%=x.pkuptime%>','<%=User.find_by(userid: x.userid).stdnum%>','<%=User.find_by(userid: x.userid).username%>', '<%=URI.decode(x.attachment_url.split('/').last)%>', '<%=x.totalpage%>', '<%=x.landscape%>', '<%=x.doublepg%>', '<%=x.split%>', '<%=x.color%>', '<%=x.attachment_url%>')">상세보기</button></td>
            
            <% if x.progress == "인쇄대기" %>
            	<td class="printState"><button style="background: green;" onclick="window.location='../home/changeState1/<%=x.id%>'"><%= x.progress %></button></td>
            <% elsif x.progress == "인쇄중" %>
            	<td class="printState"><button style="background: blue;" onclick="window.location='../home/changeState3/<%=x.id%>'"><%= x.progress %></button></td>
            <% elsif x.progress == "인쇄완료" %>
            	<td class="printState"><button style="background: grey;"><%= x.progress %></button></td>
           	<% elsif x.progress == "인쇄취소" %>
            	<td class="printState"><button style="background: red;"><%= x.progress %></button></td>
           	<% end %>

          </tr>
        <% end %>
      <% end %>
    </tbody>

    <tbody id="tomorrowlist">
      <% if @tomorrowuploads.empty? %>
        <tr>
          <td>신청 내역이 없습니다.<br></td>
        </tr>
      <% else %>
        <% @tomorrowuploads.each do |x| %>
          <tr>
          	<td class="minify pickupNum"><%=x.id%></td>
            <td class="minify pickupTime"><%= x.pkuptime.split('~')[0] %></td>
            <td class="pickupName"><%= User.find_by(userid: x.userid).username %></td>
            <td class="printPage"><%= x.pagenum %>(총 <%= x.totalpage %> 장)</td>
            <td class="checkDetail"><button id="detailBtn" onclick="showDetails('<%=x.pkuptime%>','<%=User.find_by(userid: x.userid).stdnum%>','<%=User.find_by(userid: x.userid).username%>', '<%=URI.decode(x.attachment_url.split('/').last)%>', '<%=x.totalpage%>', '<%=x.landscape%>', '<%=x.doublepg%>', '<%=x.split%>', '<%=x.color%>', '<%=x.attachment_url%>')">상세보기</button></td>
            
            <% if x.progress == "인쇄대기" %>
            	<td class="printState"><button style="background: green;" onclick="window.location='../home/changeState1/<%=x.id%>'"><%= x.progress %></button></td>
            <% elsif x.progress == "인쇄중" %>
            	<td class="printState"><button style="background: orange;" onclick="window.location='../home/changeState3/<%=x.id%>'"><%= x.progress %></button></td>
            <% elsif x.progress == "인쇄완료" %>
            	<td class="printState"><button style="background: grey;"><%= x.progress %></button></td>
           	<% elsif x.progress == "인쇄취소" %>
            	<td class="printState"><button style="background: red;"><%= x.progress %></button></td>
           	<% end %>

          </tr>
        <% end %>
      <% end %>
    </tbody>

    <tfoot>
    </tfoot>

  </table>

</div>

