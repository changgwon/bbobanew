<link href="/assets/home.css" media="screen" rel="stylesheet" />

<style>
/* 사용자 용 버전일 때*/
.pheader{
  display:none;
}


.main_section{
	width:50vw; 
	height:100vh; 
	max-height:800px;
}

.image_section{
	width:50vw; 
	height:100vh; 
	max-height:800px;
}
.file_upload{
	height:50%; 
	width:100%;
}

.list_point{
	height:50%; 
	width:100%;
	display:flex;
}
.filecurrent_li{
	width:50%; 
	height:100%;
	padding:30px;
	padding-right:0px;
}
.point{
	width:50%; 
	height:100%; 
	padding:30px;
	padding-left:0px;
}
.file_upload_text{
	height:70%;
	padding-top:3em;
	
}

.card-gotolist, .card-gotopoint{
	height:100%;
	text-align:center;
}
.main-icon{
	background-repeat:no-repeat;
	background-size:cover;
	background-position:center;
    display: block;
    width: 60%;
    max-width:150px;
    margin: auto;
    margin-top: 30px;
    margin-bottom:20px;
    font-size:0.9em;
}
.main-image{
	 display:none; 
	 max-width:100%;
	 max-height:100%;
	 margin: 0 auto;
}
.badge{
	padding: 1em 1em;
}


@media (min-width:1024px){
	.main_section{
		padding-left:7%;
	}
	.filecurrent_li, .point{
		padding:0;
	}
	.main-icon{
		margin:0;
	}
	.list_point{
		margin-top:50px;
	}


}

@media (max-width:1023px){
	
	.image_section{
		display:none;
	}
	.main_section{
		width:100vw;
	}
	.list_point{
		height:40%;
	}
	.main-image{
		display:block;
	}
	.file_upload{
		height:60%;
	}
	.file_upload_link{
		text-align: center;
	}
	.file_upload_text{
		padding:0;
	}
	
	.main-icon{
		margin-top:0;
	}
	.web-text{
		display:none;
	}
	.file_upload{
		padding:0;
	}

}
@media (max-width:767px){
	.filecurrent_li, .point{
		padding:10px;
	}



}

</style>
</head>
